FROM node:22.14.0

WORKDIR /usr/src/app/linkitylink

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy application files
COPY server.js ./
COPY public/ ./public/
COPY README.md ./

# Expose port
EXPOSE 3010

# Set environment variables
ENV PORT=3010
ENV BDO_BASE_URL=http://localhost:3003

# Start server
CMD ["node", "server.js"]
